{
    "version": 2,
    "public": true,
    "builds": [
      { "src": "api/**/*.js", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/public/(.*)", "dest": "/public/$1" },
      { "src": "/", "dest": "/public/index.html" },
      { "src": "/redirect/(.*)", "dest": "/api/redirect/$1" },
      { "src": "/api/(.*)", "dest": "/api/$1" }
    ]
  }